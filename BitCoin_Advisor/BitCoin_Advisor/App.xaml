<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BitCoin_Advisor.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#585169</Color>
            <Color x:Key="PrimaryDark">#122b44</Color>
            <Color x:Key="Accent">#354551</Color>
            <Color x:Key="LightBackgroundColor">#000000</Color>
            <Color x:Key="DarkBackgroundColor">#A0A0A0</Color>
            <Color x:Key="MediumGrayTextColor">#0c0b0b</Color>
            <Color x:Key="LightTextColor">#999999</Color>
            <Color x:Key="BackColour">#3F3F46</Color>
            <Color x:Key="BarBackColour">#313138</Color>
                        
            //Exclusive
            <Color x:Key="BackGroundArbitrageColor">#2D2D30</Color>
            <Color x:Key="LabelColor">#92caf4</Color>
            <Color x:Key="ValueColor">#D7BA7D</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource BarBackColour}" />
                <Setter Property="BackgroundColor" Value="{StaticResource BackColour}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
